<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_rft">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivNoServerFound"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginBottom="50sp"
            android:layout_centerInParent="true"
            android:src="@drawable/no_server_found" />

        <TextView
            android:id="@+id/tvNoServerFound"
            style="@style/black_bold_24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoServerFound"
            android:layout_marginTop="150sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="No Server Found"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvPleaseTryAgain"
            style="@style/black_bold_24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNoServerFound"
            android:gravity="center"
            android:text="An error occurd while loading! Please try again"
            android:textColor="@color/white">

        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPleaseTryAgain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/white"
            android:text="Try Again"
            android:textColor="@color/red_rft">


        </Button>


    </RelativeLayout>


</RelativeLayout>