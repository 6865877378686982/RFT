<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivNoServerFound"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginBottom="50sp"
            android:layout_centerInParent="true"
            android:src="@drawable/no_server_found"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvNoServerFound"
            style="@style/black_bold_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoServerFound"
            android:layout_marginTop="150sp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:text="No Server Found"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPleaseTryAgain"
            style="@style/black_bold_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNoServerFound"
            android:gravity="center"
            android:text="@string/server_stopped"
            android:textColor="@color/black">

        </TextView>

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPleaseTryAgain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/red_rft"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="@color/white">


        </Button>


    </RelativeLayout>


</RelativeLayout>