<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivNoServerFound"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/no_server_found_latest"
             />

        <TextView
            android:id="@+id/tvNoServerFound"
            style="@style/black_bold_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoServerFound"
            android:gravity="center"
            android:text="No Server Found"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPleaseTryAgain"
            style="@style/black_bold_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/server_stopped"
            android:textColor="@color/black">

        </TextView>

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/red_rft"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="@color/white">


        </Button>


    </LinearLayout>


</RelativeLayout>