<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.LogHistoryFragment">
    <ProgressBar
        android:progressDrawable="@drawable/progress_bar_color"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/progressBarLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ProgressBar>
    <RelativeLayout
        android:id="@+id/noInternetLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivNoInternet"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_centerInParent="true"
            android:src="@drawable/smartphone" />

        <TextView
            style="@style/black_bold_24sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoInternet"
            android:layout_marginTop="20sp"
            android:text="No Internet Connection Found! Please Check Your Internet" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noDataLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivNoInternetLog"
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_centerInParent="true"
            android:src="@drawable/no_data" />

        <TextView
            style="@style/black_bold_24sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoInternetLog"
            android:layout_marginTop="20sp"
            android:text="No Data Found" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayoutLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:scrollIndicators="end"
            android:scrollbarStyle="outsideOverlay"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hello, John"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="120sp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="20sp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="@color/white"
                            android:spinnerMode="dropdown"
                            android:textAlignment="textEnd" />

                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15sp"
                        android:scrollbarSize="5dp"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbarThumbVertical="@drawable/custom_scrollbar_drawable"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

 </RelativeLayout>


